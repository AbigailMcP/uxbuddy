.welcome
  %h3
    %strong #{@test.name}
    \ // Welcome
  %hr

  =render 'tests/welcome'

.row#test-title
  .col.s12
    %h3
      %strong #{@test.name}
      \ // Your Feedback
    %hr
.row
  -@questions.each.with_index do |q, i|
    .col.s6
      %div{class: "q#{i + 1}", id:"test-question"}
        %h5="Question #{i + 1} of #{@questions.length}"
        %p=q.text
        %input{type: "#{q.format}", id: "range#{i+1}", min: "0", max: "5", step: "1"}
    .col.s6
      %div{class: "q#{i + 1}", id:"test-comment"}
        %h5 Comments
        .input-field.col.s12
          %textarea.materialize-textarea{type: "text", id: "comment#{i+1}", placeholder: 'Any other comments'}

  .col.s3.offset-s9
    %div{class: "q#{@questions.count - 1}"}
      .toggle_button
        %a.btn.waves-effect.waves-light{href: "javascript:void(0)", id: 'toggle'} Next

    %div{class: "q#{@questions.count}", style: "display:none"}
      .toggle_button
        %a.btn.waves-effect.waves-light{href: thanks_test_path, id: 'toggle'} Finish

.row#iframe-row
  %hr
  .col.s12
    %iframe{allowfullscreen: "", id: "iframe", src: "#{@iframe_url}"}
      %p Sorry, something seems to have gone wrong!
